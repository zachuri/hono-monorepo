{
  "name": "acme",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zachuri/monorepo-hono/"
  },
  "keywords": [
    "starter",
    "template",
    "turborepo",
    "biome",
    "shadcn/cn",
    "nextjs"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "ui:add:component": "turbo ui:add --filter=@repo/ui --",
    "prepare": "lefthook install",
    "ui": "bun run --cwd packages/ui ui",
    "web": "bun run --cwd ./apps/next dev",
    "api": "bun run --cwd ./packages/api dev",
    "check": "bun run format:check && bun run lint && bun run fix:check",
    "format:check": "bun x @biomejs/biome format ./packages ./apps",
    "fix:check": "bun x @biomejs/biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true ./packages ./apps",
    "generate": "cd packages/api && bun db:generate",
    "deps:fix": "manypkg fix",
    "deps:update": "bun x npm-check-updates -ui -ws"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@manypkg/cli": "^0.25.0",
    "better-auth": "^1.3.7",
    "hono-pino": "^0.7.2",
    "lefthook": "1.12.3",
    "pino": "^9.9.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "wrangler": "^3.109.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome",
    "esbuild",
    "lefthook"
  ]
}
