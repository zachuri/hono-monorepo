{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "StoryBook",
  "extends": "@acme/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@acme/ui/*": ["../../packages/ui/src/*"],
      "@acme/tsconfig/*": ["../../packages/ui/tsconfig.json"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
