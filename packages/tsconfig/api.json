{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force"
  }
}
